algoritmo in5;

variaveis
  lit : literal;
  mat : matriz[10] de inteiro;
  x, i, aux1, aux2, aux3, auxFunc: inteiro;
  l : logico;
fim-variaveis

funcao multiplicarNumeros(valor1 : inteiro, valor2: inteiro) : inteiro
  media : inteiro;
  inicio
    media = (valor1 * valor2);
    retorne media;
  fim
fim-funcao

funcao calcularMediaReal(valor1 : real, valor2: real) : real
  media : real;
  inicio
    media = (valor1 + valor2) / 2.0;
    retorne media;
  fim
fim-funcao

inicio
  mat[0] = 9;
